                </Grid>
                <Grid x:Name="TalonGrid" Visibility="Hidden">
                    <StackPanel Margin="0,65,0,0">
                        <GroupBox
                        Header="Новый талон"
                        Style="{DynamicResource MaterialDesignCardGroupBox}"
                        Margin="16,16,30,16"
                        materialDesign:ColorZoneAssist.Mode="Custom"
                        materialDesign:ColorZoneAssist.Background="#FF388E3C"
                        materialDesign:ColorZoneAssist.Foreground="White"
                        Height="500" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="14">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel
                                    Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                        Kind="TextBoxPlus"
                                        Height="32"
                                        Width="32"
                                        VerticalAlignment="Center" />
                                        <TextBlock
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                        Text="{Binding}" FontFamily="/Medkit;component/Fonts/#Roboto Black" FontSize="20" />
                                    </StackPanel>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="53*"/>
                                    <RowDefinition Height="45*"/>
                                    <RowDefinition Height="46*"/>
                                    <RowDefinition Height="47*"/>
                                    <RowDefinition Height="43*"/>
                                    <RowDefinition Height="162*"/>
                                    <RowDefinition Height="36*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="239*"/>
                                    <ColumnDefinition Width="12*"/>
                                    <ColumnDefinition Width="239*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox
                                x:Name="FamBox"
                                PreviewTextInput="FamBox_OnPreviewTextInput"
                                    TextChanged="FamBox_TextChanged"
                                PreviewKeyDown="PhoneBox_OnKeyDown"
                                materialDesign:HintAssist.Hint="Фамилия пациента"
                                materialDesign:HintAssist.FloatingScale="0.90"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                   Grid.Row="1"
                                VerticalAlignment="Bottom" Height="42" Margin="0" />
                                <TextBox
                                x:Name="NameBox"
                                PreviewKeyDown="PhoneBox_OnKeyDown"
                                    TextChanged="FamBox_TextChanged"
                                PreviewTextInput="FamBox_OnPreviewTextInput"
                                materialDesign:HintAssist.Hint="Имя пациента"
                                materialDesign:HintAssist.FloatingScale="0.90"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Bottom" Height="42" Grid.Row="2" Margin="0"/>
                                <TextBox
                                x:Name="OtchBox"
                                PreviewKeyDown="PhoneBox_OnKeyDown"
                                    TextChanged="FamBox_TextChanged"
                                PreviewTextInput="FamBox_OnPreviewTextInput"
                                materialDesign:HintAssist.Hint="Отчество пациента"
                                materialDesign:HintAssist.FloatingScale="0.90"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Bottom" Height="42" Grid.Row="3" Margin="0" />
                                <DatePicker
                                materialDesign:HintAssist.Hint="Дата рождения"
                                x:Name="dateDay"
                                    Language="ru-RU"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                materialDesign:HintAssist.FloatingScale="0.90" Margin="0,0,0,3" Width="120" Grid.Row="4" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
                                <extended:MaskedTextBox
                                materialDesign:HintAssist.Hint="Телефон"
                                Mask="+79999999999"
                                MaxLength="13"
                                x:Name="PhoneBox"
                                materialDesign:HintAssist.FloatingScale="0.90"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                VerticalAlignment="Top" Width="150" Height="42" Grid.Row="5" HorizontalAlignment="Left" />
                                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="42" Margin="0" Width="471">
                                    <Label Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontFamily="/Medkit;component/Fonts/#Roboto" Foreground="#FF515151" FontWeight="Bold">Паспорт:</Label>
                                    <TextBox
                                    x:Name="SerialBox"
                                    MaxLength="4"
                                    PreviewKeyDown="PhoneBox_OnKeyDown"
                                    TextChanged="SerialBox_OnTextChanged"
                                    materialDesign:HintAssist.Hint="Серия"
                                    materialDesign:HintAssist.FloatingScale="0.90"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    VerticalAlignment="Center" Width="50"  Height="42" Grid.Row="2" HorizontalAlignment="Left" PreviewTextInput="SerialBox_OnPreviewTextInput" />
                                    <TextBox
                                    x:Name="NumPass"
                                    MaxLength="6"
                                    PreviewKeyDown="PhoneBox_OnKeyDown"
                                    TextChanged="SerialBox_OnTextChanged"
                                    materialDesign:HintAssist.Hint="Номер"
                                    materialDesign:HintAssist.FloatingScale="0.90"
                                    PreviewTextInput="SerialBox_OnPreviewTextInput"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    VerticalAlignment="Center" Width="50"  Height="42" Grid.Row="2" HorizontalAlignment="Left" Margin="5,0,0,0" />
                                    <Button Foreground="White" Grid.Row="4" VerticalAlignment="Bottom"
                                    ToolTip="Найти пациента в базе" Margin="17,0,0,0" HorizontalAlignment="Right"
                                    Click="ButtonFind_OnClick"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}" FontSize="16">Найти</Button>
