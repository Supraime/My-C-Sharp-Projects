<Window x:Class="Medkit.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:extended="http://schemas.xceed.com/wpf/xaml/toolkit"
        x:Name="Window"
        mc:Ignorable="d"
        Title="MenuWindow"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowState="Normal"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen" Icon="Assets/Img/medkiticon.png" 
        MinWidth="1260" MinHeight="600" SizeToContent="Manual"
        Width="1260" Height="600" Background="#FFEEF9FB" SizeChanged="Window_SizeChanged" StateChanged="Window_StateChanged">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Rectangle  MinWidth="200"
                    MinHeight="{Binding ActualHeight, ElementName=Window}" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Fill="White" Height="600"
                    x:Name="toolBar">
        </Rectangle>
        <ContentControl MouseDoubleClick="Control_OnMouseDoubleClick">
            <Rectangle MinWidth="800" MinHeight="65"
                   Fill="#FF388E3C"
                   VerticalAlignment="Top"
                   MouseLeftButtonDown="Rectangle_MouseLeftButtonDown">
            </Rectangle>
        </ContentControl>
        <Grid MinWidth="800" MinHeight="65" VerticalAlignment="Top">
            <Label Content="sdaw" x:Name="labelName"  Foreground="White" HorizontalAlignment="Right" FontFamily="/Medkit;component/Fonts/#Roboto Medium" FontSize="20" Margin="0,5,130,0" VerticalAlignment="Top"></Label>
            <Label x:Name="labelStatus" Foreground="White" HorizontalAlignment="Right" FontFamily="/Medkit;component/Fonts/#Roboto Light" FontSize="18" VerticalAlignment="Bottom" Margin="0,0,130,5" >Сотрудник</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <materialDesign:PackIcon 
                    Kind="BadgeAccountHorizontalOutline" 
                    Width="50" Height="50"
                    Foreground="White"
                    HorizontalAlignment="Right" Margin="0,5,12,0" VerticalAlignment="Top"/>
                <Button 
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    ToolTip="Выход из учетной записи"
                    HorizontalAlignment="Right" 
                    Click="Button_Click">
                    <materialDesign:PackIcon 
                        Width="40"
                        Height="40"
                        Foreground="White"
                        Kind="ExitToApp" />
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="{Binding ActualWidth, ElementName=toolBar}" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Label Visibility="Visible" FontFamily="/Medkit;component/Fonts/#Roboto Black" FontSize="36" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">Medkit</Label>
                    <Rectangle Width="3" Fill="White" HorizontalAlignment="Right" Margin="54,0,0,0"/>
                </StackPanel>
                <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label FontFamily="/Medkit;component/Fonts/#Roboto Light" FontSize="16" Foreground="White" x:Name="clock" VerticalAlignment="Center">Время: 12:00</Label>
                    <Label FontFamily="/Medkit;component/Fonts/#Roboto Light" FontSize="16" Foreground="White" x:Name="dateLabel" VerticalAlignment="Bottom">Дата: 13.05.2020</Label>
                </StackPanel>
                <StackPanel Width="466" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                    <Label Visibility="Visible" FontFamily="/Medkit;component/Fonts/#Roboto Black" FontSize="22" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0,0,0">Поликлиника "Здоровье"</Label>
                </StackPanel>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal">
            <Grid Grid.Column="1" Width="{Binding ActualWidth, ElementName=toolBar}"
              Height="{Binding ActualHeight, ElementName=toolBar}" HorizontalAlignment="Left">
                <Grid x:Name="UserPanel">
                    <StackPanel Margin="0,85,0,0">
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left" Click="Button_Click_4">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon x:Name="iconHome" Height="30" Width="30" Kind="HomeAccount" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Рабочий стол</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left"
                    Click="Button_Click_2">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="FileEdit" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Запись на прием</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left" Click="Button_Click_5">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="HumanMaleFemale" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Пациенты</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    Click="ButtonBase_OnClick"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="Information" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">О программе</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid x:Name="AdminPanel" Visibility="Hidden">
                    <StackPanel Margin="0,85,0,0">
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left" Click="Button_Click_4">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon x:Name="IconHomeAdmin" Height="30" Width="30" Kind="HomeAccount" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Рабочий стол</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left"
                    Click="DoctorGrid_OnClick">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="Doctor" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Доктора</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    x:Name="AdminClients"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left" Click="AdminClients_OnClick">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="HumanMaleFemale" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Пациенты</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                            Height="50"
                            Foreground="#FF388E3C"
                            Click="UserBase_OnClick"
                            Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="AccountGroup" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Учетные записи</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                            Height="50"
                            Foreground="#FF388E3C"
                            Click="Button_Click_7"
                            Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="Graph" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Статистика</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                            Height="50"
                            Foreground="#FF388E3C"
                            Click="Settings_OnClick"
                            Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="Cog" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">Настройки</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                    Height="50"
                    Foreground="#FF388E3C"
                    Click="ButtonBase_OnClick"
                    Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Medkit;component/Fonts/#Roboto" HorizontalAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Height="30" Width="30" Kind="Information" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    <Label Foreground="#FF388E3C" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16">О программе</Label>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid x:Name="LeftGrid" Width="1030" HorizontalAlignment="Center" Margin="15,0,0,0">
                <Grid x:Name="MainGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="101*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0" Grid.Column="0">
                        <StackPanel Margin="10,70,0,478" Width="370">
                            <TextBox
                                x:Name="findTextBox"
                                materialDesign:HintAssist.Hint="Поиск"
                                KeyDown="findTextBox_KeyDown"
                                materialDesign:HintAssist.HelperText="Введите запрос и нажмите 'Найти' или клавишу 'Enter'"
                                Margin="0,0,12,0" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5,77,0,480" Width="360" VerticalAlignment="Top">
                            <Button
                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Width="100"
                            Foreground="White"
                            Click="Button_Click_3" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="16">
                                Найти
                            </Button>
                            <Button
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Click="Button_Click_9"
                                ToolTip="Фильтры записей на прием" Margin="20,0,0,0" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="16" Foreground="White">
                                Фильтры
                            </Button>
                            <Label x:Name="WarFilt" Visibility="Hidden" VerticalAlignment="Center" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="14" FontWeight="Bold" Margin="10,0,0,0">Фильтр включен!</Label>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,130,0,0" Grid.Column="0">
                        <DataGrid
                        Margin="0 8 0 0"
                        x:Name="dataWork"
                        ItemsSource="{Binding}"
                        CanUserSortColumns="True"
                        ColumnWidth="*"
                        CanUserDeleteRows="False"
                        HorizontalScrollBarVisibility="Disabled"
                        materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                        CanUserAddRows="False" FontFamily="/Medkit;component/Fonts/#Roboto"
                        ToolTip="Кликните по строке для подробной информации" FontSize="14">
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#FF388E3C" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontFamily" Value="/Medkit;component/Fonts/#Roboto Black" />
                                    <Setter Property="FontSize" Value="16"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <DockPanel Background="GhostWhite">
                                        <Grid Margin="0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Padding="5" Text="Дата рождения: " Foreground="#FF388E3C" FontWeight="Bold" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding date}" Grid.Column="1" />
                                            <TextBlock Padding="5" Text="Телефон: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Column="2" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding telephone}" Grid.Column="3"/>
                                            <TextBlock Padding="5" Text="Направление: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Row="1" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding napr}" Grid.Column="1" Grid.Row="1" />
                                            <TextBlock Padding="5" Text="Врач: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Row="1" Grid.Column="2" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding Врач}" Grid.Row="1" Grid.Column="3"/>
                                            <TextBlock Padding="5" Text="Тип: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Row="2" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding osmt}" Grid.Row="2" Grid.Column="1"/>
                                            <TextBlock Padding="5" Text="Кабинет: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Row="2" Grid.Column="2" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding cab}" Grid.Row="2" Grid.Column="3"/>
                                            <TextBlock Padding="5" Text="Цена: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Row="3" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding pricer}" Grid.Row="3" Grid.Column="1"/>
                                            <TextBlock Padding="5" Text="Скидка: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Row="3" Grid.Column="2" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding disc}" Grid.Row="3" Grid.Column="3"/>
                                            <Separator Grid.Row="4" Style="{StaticResource MaterialDesignDarkSeparator}" Grid.ColumnSpan="4"></Separator>
                                            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Button
                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                            Width="150"
                                            Foreground="White"
                                            HorizontalAlignment="Center"
                                            Click="Button_Click_1"
                                            CommandParameter="{Binding Path=id}" Margin="0">
                                                    Отменить запись
                                                </Button>
                                                <Button
                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                            Width="150"
                                            Foreground="White"
                                            x:Name="TalonWord"
                                            HorizontalAlignment="Center"
                                            Click="TalonWord_OnClick"
                                            CommandParameter="{Binding Path=id}" Margin="10,0">
                                                    Печать талона
                                                </Button>
                                                <Button
                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                            Width="150"
                                            Foreground="White"
                                            HorizontalAlignment="Center"
                                                    Click="Button_Click_8"
                                            CommandParameter="{Binding Path=id}">
                                                    Прием завершен
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </DockPanel>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                        </DataGrid>
                        <!--</ScrollViewer>-->
                    </StackPanel>
                    <!--<DockPanel Grid.Column="1">
                        <GroupBox
                    x:Name="gridInfo"
                    Header="Информационное табло"
                    Style="{DynamicResource MaterialDesignCardGroupBox}"
