                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Width="223"
                                x:Name="AddUser"
                                ToolTip="Добавить нового врача в базу"
                                Foreground="White"
                                Click="AddUser_OnClick"  FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="16" Margin="15,0,0,0">
                                Добавить пользователя
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,130,0,0" Grid.Column="0">
                        <DataGrid
                        Margin="0 8 0 0"
                        x:Name="UserDataGrid"
                        ItemsSource="{Binding}"
                        CanUserSortColumns="True"
                        ColumnWidth="*"
                        CanUserDeleteRows="False"
                        materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                        CanUserAddRows="False" FontFamily="/Medkit;component/Fonts/#Roboto"
                        ToolTip="Кликните по строке для подробной информации" FontSize="14">
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#FF388E3C" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontFamily" Value="/Medkit;component/Fonts/#Roboto Black" />
                                    <Setter Property="FontSize" Value="16"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <DockPanel Background="GhostWhite">
                                        <Grid Margin="0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Button
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                x:Name="DeleteUser"
                                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                Foreground="White"
                                                HorizontalAlignment="Center"
                                                Click="DeleteUser_OnClick"
                                                ToolTip="Удалить врача из базы"
                                                CommandParameter="{Binding Path=id}" Margin="0" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="14">
                                                Удалить
                                            </Button>
                                            <Button
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                Foreground="White"
                                                x:Name="EditUser"
                                                HorizontalAlignment="Center"
                                                ToolTip="Редактировать информацию о враче"
                                                Click="EditUser_OnClick"
                                                CommandParameter="{Binding Path=id}" Margin="0" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="14">
                                                Редактировать
                                            </Button>
                                        </Grid>
                                    </DockPanel>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                        </DataGrid>
                    </StackPanel>
                </Grid>
                <Grid x:Name="ClientAdminGrid" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="504*"/>
                        <ColumnDefinition Width="11*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0" Grid.Column="0" >
                        <StackPanel Margin="10,70,0,478" Width="370">
                            <TextBox
                        x:Name="ClinentAdminFindTextBox"
                        materialDesign:HintAssist.Hint="Поиск"
                                KeyDown="ClinentAdminFindTextBox_KeyDown"
                        materialDesign:HintAssist.HelperText="Введите запрос и нажмите 'Найти' или клавишу 'Enter'" Margin="0,0,12,0" FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="14" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5,77,0,480" VerticalAlignment="Top">
                            <Button
                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Width="100"
                            x:Name="FindAdminClientBut"
                            Foreground="White"
                            Click="FindAdminClientBut_Click"  FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="16">
                                Найти
                            </Button>
                            <Button
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Width="223"
                                x:Name="AddClient"
                                ToolTip="Добавить нового клиента в базу"
                                Foreground="White"
                                Click="AddClient_OnClick"  FontFamily="/Medkit;component/Fonts/#Roboto" FontSize="16" Margin="15,0,0,0">
                                Добавить клиента
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,130,0,0" Grid.Column="0">
                        <DataGrid
                        Margin="0 8 0 0"
                        x:Name="ClientAdminDataGrid"
                        ItemsSource="{Binding}"
                        CanUserSortColumns="True"
                        ColumnWidth="*"
                        CanUserDeleteRows="False"
                        materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                        CanUserAddRows="False" FontFamily="/Medkit;component/Fonts/#Roboto"
                        ToolTip="Кликните по строке для подробной информации" FontSize="14">
                            <DataGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#FF388E3C" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontFamily" Value="/Medkit;component/Fonts/#Roboto Black" />
                                    <Setter Property="FontSize" Value="16"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <DockPanel Background="GhostWhite">
                                        <Grid Margin="0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Padding="5" Text="Дата рождения: " Foreground="#FF388E3C" FontWeight="Bold" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding dt}" Grid.Column="1" />
                                            <TextBlock Padding="5" Text="Телефон: " Foreground="#FF388E3C" FontWeight="Bold" Grid.Column="2" FontFamily="/Medkit;component/Fonts/#Roboto" />
                                            <TextBlock Padding="5" Text="{Binding telephone}" Grid.Column="3"/>
                                            <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}" Grid.ColumnSpan="4"></Separator>
                                            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Button
                                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                    Width="150"
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    Click="Button_Click_6"
                                                    CommandParameter="{Binding Path=id}" Margin="0,0,5,0">
                                                    Редактировать
                                                </Button>
                                                <Button
                                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                    Width="150"
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    CommandParameter="{Binding Path=id}"
                                                    Click="DeleteClient_OnClick" Margin="5,0,0,0">
                                                    Удалить
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </DockPanel>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
        <Rectangle x:Name="shadow"  Visibility="Hidden" Fill="#BF000000" Width="{Binding ActualWidth, ElementName=Window}" Height="{Binding ActualHeight, ElementName=Window}"></Rectangle>
        <materialDesign:Snackbar x:Name="snackInfo" MessageQueue="{materialDesign:MessageQueue}" Margin="0,0,0,10" />
    </Grid>
</Window>
